#include <Arduino.h>
#include <WiFi.h>
#include <micro_ros_arduino.h>

#include <rcl/rcl.h>
#include <rclc/rclc.h>
#include <rclc/executor.h>
#include <std_msgs/msg/int32.h>

// -------------------------
// L298N MOTOR PINOUT (TANK DRIVE)
// -------------------------
// LEFT MOTOR
#define IN1_L 25
#define IN2_L 26
#define ENA_L 27   // PWM

// RIGHT MOTOR
#define IN1_R 32
#define IN2_R 33
#define ENA_R 14   // PWM

#define PWM_FREQ 1000
#define PWM_RES 8   // 0â€“255 range

// -------------------------
// WiFi + micro-ROS
// -------------------------
char ssid[] = "Adentest";
char password[] = "lebronjames";

char agent_ip[] = "10.42.0.1";
uint16_t agent_port = 8888;

rcl_subscription_t sub;
std_msgs__msg__Int32 cmd_msg;

rcl_allocator_t allocator;
rclc_executor_t executor;
rcl_node_t node;
rclc_support_t support;

// --------------------------------
// MOTOR DRIVE FUNCTION
// --------------------------------
void driveMotor(int pwmValue, int IN1, int IN2, int ENA)
{
    int pwm = abs(pwmValue);
    if (pwm > 255) pwm = 255;

    if (pwmValue > 0) {      // forward
        digitalWrite(IN1, HIGH);
        digitalWrite(IN2, LOW);
        ledcWrite(ENA, pwm);
    }
    else if (pwmValue < 0) { // backward
        digitalWrite(IN1, LOW);
        digitalWrite(IN2, HIGH);
        ledcWrite(ENA, pwm);
    }
    else {                   // stop
        digitalWrite(IN1, LOW);
        digitalWrite(IN2, LOW);
        ledcWrite(ENA, 0);
    }
}

// --------------------------------
// CALLBACK
// msg.data = (leftPWM << 16) | (rightPWM & 0xFFFF)
// --------------------------------
void motor_callback(const void * msg_in)
{
    const std_msgs__msg__Int32 * msg = (const std_msgs__msg__Int32 *)msg_in;

    int32_t raw = msg->data;

    int16_t leftPWM  = (raw >> 16) & 0xFFFF;
    int16_t rightPWM = raw & 0xFFFF;

    driveMotor(leftPWM,  IN1_L, IN2_L, ENA_L);
    driveMotor(rightPWM, IN1_R, IN2_R, ENA_R);
}

// -------------------------
// SETUP
// -------------------------
void setup()
{
    Serial.begin(115200);

    pinMode(IN1_L, OUTPUT); pinMode(IN2_L, OUTPUT);
    pinMode(IN1_R, OUTPUT); pinMode(IN2_R, OUTPUT);

    // Attach PWM channels
    ledcAttach(ENA_L, PWM_FREQ, PWM_RES);
    ledcAttach(ENA_R, PWM_FREQ, PWM_RES);

    set_microros_wifi_transports(ssid, password, agent_ip, 8888);
    Serial.println("Connecting to micro-ROS...");
    delay(2000);

    allocator = rcl_get_default_allocator();
    rclc_support_init(&support, 0, NULL, &allocator);
    rclc_node_init_default(&node, "esp32_tank_node", "", &support);

    rclc_subscription_init_default(
        &sub,
        &node,
        ROSIDL_GET_MSG_TYPE_SUPPORT(std_msgs, msg, Int32),
        "tank_cmd"
    );

    rclc_executor_init(&executor, &support.context, 1, &allocator);
    rclc_executor_add_subscription(&executor, &sub, &cmd_msg, &motor_callback, ON_NEW_DATA);
}

// -------------------------
// LOOP
// -------------------------
void loop()
{
    rclc_executor_spin_some(&executor, RCL_MS_TO_NS(10));
    delay(5);
}
